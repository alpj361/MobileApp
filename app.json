{
  "expo": {
    "name": "vibecode",
    "slug": "vibecode",
    "scheme": "com.vibecode.app",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.vibecode.app",
      "infoPlist": {
        "NSCalendarsUsageDescription": "Vibecode uses your calendar to show and manage the events you create.",
        "NSRemindersUsageDescription": "Vibecode uses reminders to notify you about upcoming events you save."
      }
    },
    "android": {
      "edgeToEdgeEnabled": true,
      "package": "com.vibecode.app"
    },
    "plugins": [
      "expo-asset",
      "expo-build-properties",
      "expo-mail-composer",
      "expo-secure-store",
      "expo-sqlite",
      "expo-video",
      "expo-web-browser"
    ]
  }
}
